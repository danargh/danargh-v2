<div class="parent">
   <div class="card flex">
      <div class="h-[200px]">
         <img class="object-cover" src={img} alt={img} />
      </div>
      <div class="content-box">
         {stack && <div class="card-content badge badge-secondary mx-2">{badge}</div>}
         <p class="text-[1.4rem] text__gradient font-[700] line-clamp-2">{title}</p>
         <p class="card-content line-clamp-2">{desc}</p>
         <div class="card-actions justify-end">
            {
               tags &&
                  tags.map((tag) => (
                     <a href={`${tag_url}/${tag}`} class="badge badge-outline">
                        {tag}
                     </a>
                  ))
            }
         </div>
         <a href={url} target={target} class="see-more">See More</a>
      </div>
   </div>
</div>
